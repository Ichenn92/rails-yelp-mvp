<h1><%= @restaurant.name %></h1>

<h3>Details</h3>
<ul class="list-group">
  <% @restaurant.attributes.each do |key, value| %>
    <li class="list-group-item"><%= "#{key} : #{value}" %></li>
  <% end %>
</ul>

<h3>reviews</h3>
<ul class="list-group">
  <% @restaurant.reviews.each do |review| %>
    <li class="list-group-item"><%= review.content %></li>
  <% end %>
</ul>

<%= link_to 'Write a review', new_restaurant_review_path(@restaurant) %>
